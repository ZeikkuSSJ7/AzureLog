<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".search.NewGameActivity">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/newGameGeneralData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/newGameCover"
                    android:layout_width="0dp"
                    android:layout_weight="0.85"
                    android:layout_height="match_parent"
                    android:src="@drawable/add_cover_icon"
                    android:layout_margin="10dp"
                    android:contentDescription="@string/gamecover" />
                <RelativeLayout
                    android:background="@drawable/rectangle_playing"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:padding="10dp">
                    <TextView
                        android:id="@+id/newGameTitleTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/newGameTitle"/>
                    <EditText
                        android:id="@+id/newGameTitle"
                        android:layout_below="@id/newGameTitleTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"/>
                    <TextView
                        android:id="@+id/newGamePlatformTV"
                        android:layout_below="@id/newGameTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/newGamePlatform"/>
                    <EditText
                        android:id="@+id/newGamePlatform"
                        android:layout_below="@id/newGamePlatformTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"/>
                    <TextView
                        android:id="@+id/newGameDeveloperTV"
                        android:layout_below="@id/newGamePlatform"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/newGameDeveloper"/>
                    <EditText
                        android:id="@+id/newGameDeveloper"
                        android:layout_below="@id/newGameDeveloperTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"/>
                    <TextView
                        android:id="@+id/newGamePublisherTV"
                        android:layout_below="@id/newGameDeveloper"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/newGamePublisher"/>
                    <EditText
                        android:id="@+id/newGamePublisher"
                        android:layout_below="@id/newGamePublisherTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"/>
                    <TextView
                        android:id="@+id/newGameReleaseDateTV"
                        android:layout_below="@id/newGamePublisher"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/newGameReleaseDate"/>
                    <Button
                        android:id="@+id/newGameReleaseDateButton"
                        android:layout_below="@id/newGameReleaseDateTV"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:text="@string/set"
                        android:textColor="@color/colorBackgroundLight"/>
                    <EditText
                        android:id="@+id/newGameReleaseDate"
                        android:layout_toEndOf="@id/newGameReleaseDateButton"
                        android:layout_alignBottom="@id/newGameReleaseDateButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:enabled="false"
                        android:text="@string/newGameDefaultDate"
                        android:inputType="date"/>

                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_below="@id/newGameGeneralData"
                android:background="@drawable/rectangle_red"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_margin="10dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/newGameDescription"/>
                <EditText
                    android:id="@+id/newGameDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textCapSentences|textMultiLine"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/newGameRating"/>
                <EditText
                    android:id="@+id/newGameRating"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hintNewGameRating"
                    android:inputType="text" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/newGameGenres"/>
                <EditText
                    android:id="@+id/newGameGenres"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hintNewGameGenres"
                    android:inputType="text" />
            </LinearLayout>
        </RelativeLayout>

    </ScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/saveNewGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:src="@drawable/tick_icon"/>
</RelativeLayout>